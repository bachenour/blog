{% extends 'base.html.twig' %}
{% block body %}
    <button><a href="{{ path('articles') }}">Voir les articles</a></button>
    <h1> Liste des auteurs </h1>
    {% if auteurs is not empty %}
            {% for auteur in auteurs %}
                <h2><a href="{{ path('auteur', {'id': auteur.id}) }}">{{ auteur.nom }} ({{ auteur.email }})</a></h2>
                {% if auteur.articles is not empty %}
                    {% for article in auteur.articles %}
                        <li>{{article.titre}}</li>
                    {% endfor %}
                {% endif %}
            {% endfor %}
        {% else %}
            <li>Aucun utilisateur trouv√©</li>
        {% endif %}
{% endblock %}